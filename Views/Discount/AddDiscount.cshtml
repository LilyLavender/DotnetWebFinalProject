@model Discount

<h2 class="mt-3 ms-3">Add New Discount</h2>

<div class="row p-4">
    <div class="col-md-6">
        <form asp-action="AddDiscount" method="post">
            <div class="form-group mb-3">
                <label>Select Product</label>
                <select id="productSelect" asp-for="ProductId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Products, "ProductId", "ProductName"))"
                    onchange="updateTitle()">
                </select>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DiscountPercent"></label>
                <input asp-for="DiscountPercent" class="form-control" type="number" step="1" min="0" max="100" required  />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartTime">Start Date</label>
                <input asp-for="StartTime" class="form-control" type="date" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndTime">Expiration Date</label>
                <input asp-for="EndTime" class="form-control" type="date" required />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
