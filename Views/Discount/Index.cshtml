@model IEnumerable<Discount>

<h2 class="mt-3 ms-3">Discounts</h2>
<a class="btn btn-outline-primary btn-lg mt-3 ms-3" href="#" role="button"><i class="bi bi-plus-circle"></i> Add Discount</a>
<div class="p-2 m-2 row row-cols-1 row-cols-lg-3 featured" id="discount-row">
    @foreach (Discount d in Model)
    {
        <div class="col discounts px-2 py-4 border border-primary rounded-2 m-1">
            <h4>@d.Title</h4>
            <div class="mb-4">
                @d.Description
            </div>
            <div class="d-flex justify-content-between">
                <div>
                    <i>Discount expires: @d.EndTime.ToString("MM/dd/yyyy")</i><br />
                    <p>Discount code: @d.Code</p>
                </div>
                <div>
                    <a class="btn btn-outline-primary btn-lg" href="#" role="button"><i class="bi bi-pen"></i> Edit</a>
                    <a class="btn btn-outline-primary btn-lg ms-2 me-3" href="#" role="button"><i class="bi bi-x-circle"></i> Delete</a>
                </div>
            </div>
        </div>
    }
</div>
